			$(".list-item").click(function() {
				$(".list-item").find("input[type='checkbox']").prop("checked", false); //每次点击前，将所有checkbox置为 未选中
				var cobj = $(this).find("input[type='checkbox']"); //当前点击的checkbox
				cobj.prop("checked", true); //将当前点击的checkbox置为选中状态
				//over
			})
			//			var itemId = cobj.attr("id");
			function edit() {
				var cartype = $("#cartype").val();
				var brand = $("#brand").val();
				var factory = $("#factory").val();
				var niankuan = $("#niankuan").val();
				var name = $("#name").val();
				var type = $("#type").val();

				//		取值进行ajax
				alert("进入edit");

			}
			$("#editbtn").click(function() {
				$("#titel").html("修改参数");
				//		取值放入编辑框
				$("#cartype").val("1");
				$("#brand").val("2");
				$("#factory").val("3");
				$("#name").val("4");
				$("#niankuan").val("5");
				$("#type").val("6");

				$("#do").attr("onclick", "edit()");

			});

			function deletemore() {

			}

			function add() { //保存入库
				var cartype = $("#cartype").val();
				var brand = $("#brand").val();
				var factory = $("#factory").val();
				var name = $("#name").val();
				var niankuan = $("#niankuan").val();
				var type = $("#type").val();
				alert("进入add");

			}
			$("#add").click(function() {
				$("#titel").html("新增参数");
				$("#cartype").val("");
				$("#brand").val("");
				$("#factory").val("");
				$("#niankuan").val("");
				$("#type").val("");
				$("#name").val("");
				$("#do").attr("onclick", "add()");

			})

			//触发模态框
			$(function() {
				$("#add").click(function(e) {
					e.preventDefault();
					$("#cover").css("display", "block");
					$("#cover").animate({
						width: "100%",
						height: "100%",
						top: "0",
						left: "0"
					}, 0);
					$("#cover-content").animate({
						width: "300px",
						height: "300px",
					}, 0);
				});
				$("#editbtn").click(function(e) {
					e.preventDefault();
					$("#cover").css("display", "block");
					$("#cover").animate({
						width: "100%",
						height: "100%",
						top: "0",
						left: "0"
					}, 0);
					$("#cover-content").animate({
						width: "300px",
						height: "300px",
					}, 0);
				});
				$("#cover-bg").click(function() {
					$("#cover").removeAttr("style");
					$("#cover-content").removeAttr("style");
				});
				$("#off").click(function() {
					$("#cover").removeAttr("style");
					$("#cover-content").removeAttr("style");
				});
			});
